<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px420"
    android:layout_height="@dimen/px255"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@drawable/titlebackground"
        android:layout_height="@dimen/px68"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px169"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/px20"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_edit_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px40"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px18"
            android:layout_marginBottom="@dimen/px10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_setting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px42"
                android:textColor="@color/colorContentText"
                android:textSize="@dimen/px20" />

            <EditText
                android:id="@+id/text_setting_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px10"
                android:background="@color/colorTransparency"
                android:gravity="center_vertical"
                android:textColor="@color/colorContentText"
                android:textSize="@dimen/px20" />

        </LinearLayout>
        <View
            android:layout_width="@dimen/px356"
            android:layout_height="@dimen/px2"
            android:layout_marginLeft="@dimen/px27"
            android:background="@color/colorDialogDividing"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/px82"
            android:layout_height="@dimen/px35"
            android:layout_marginLeft="@dimen/px84"
            android:text="@string/str_dialog_cancel"
            android:background="@drawable/btn_cancel_bg"
            android:textColor="@color/colorContentText"
            android:textSize="@dimen/px18"/>
        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/px82"
            android:layout_height="@dimen/px35"
            android:layout_marginLeft="@dimen/px88"
            android:text="@string/str_dialog_ok"
            android:textColor="@color/colorContentText"
            android:textSize="@dimen/px18"
            android:background="@drawable/btn_gradient_bg"/>
    </LinearLayout>
</LinearLayout>