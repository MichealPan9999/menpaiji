<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/px421"
    android:layout_height="@dimen/px175"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px32"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/px22" />
    <TextView
        android:id="@+id/text_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px18"
        android:textColor="@color/colorTextTip"
        android:textSize="@dimen/px16" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/px25"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px30"
            android:layout_marginRight="@dimen/px35"
            android:background="@drawable/btn_cancel_bg"
            android:text="@string/str_dialog_cancel"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/px18" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="@dimen/px75"
            android:layout_height="@dimen/px30"
            android:layout_marginLeft="@dimen/px35"
            android:background="@drawable/btn_gradient_bg"
            android:text="@string/str_dialog_ok"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/px18" />
    </LinearLayout>


</LinearLayout>